{% extends '_content.html.twig' %}

{% block title %}{{ 'standard_texts.title'|trans }}{% endblock %}
{% block description %}{{ 'standard_texts.description'|trans }}{% endblock %}

{% trans_default_domain "configuration" %}
{% import "macros/components.html.twig" as components %}

{% block inner_content %}
    <p>
        <a class="btn btn-outline-primary"
           href="{{ path("configuration_standard_text_new") }}">
            <i class="fas fa-plus"></i>
            {{ "standard_text_new.title"|trans }}
        </a>
    </p>
    <table class="table table-striped table-hover datatable border">
        <thead>
        <tr>
            <th>{{ "Pathogen"|trans({}, "entity_standard_text") }}</th>
            <th>{{ "Text"|trans({}, "entity_standard_text") }}</th>
            <th class="w-minimal" data-orderable="false"></th>
        </tr>
        </thead>
        <tbody>
        {% for standardText in standardTexts %}
            <tr>
                <td>{{ standardText.pathogen|trans }}</td>
                <td>{{ standardText.text }}</td>
                <td class="w-minimal">
                    <a class="btn btn-outline-secondary"
                       href="{{ path("configuration_standard_text_edit", {"standardText" : standardText.id}) }}">
                        <i class="fas fa-edit"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
