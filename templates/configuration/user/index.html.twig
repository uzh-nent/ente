{% extends '_content.html.twig' %}

{% block title %}{{ 'users.title'|trans }}{% endblock %}
{% block description %}{{ 'users.description'|trans }}{% endblock %}

{% trans_default_domain "configuration" %}
{% import "macros/components.html.twig" as components %}

{% block inner_content %}
    <p>
        <a class="btn btn-outline-primary"
           href="{{ path("configuration_user_new") }}">
            <i class="fas fa-plus"></i>
            {{ "user_new.title"|trans }}
        </a>
    </p>
    <table class="table table-striped table-hover datatable border">
        <thead>
        <tr>
            <th>{{ "Name"|trans({}, "entity_user") }}</th>
            <th>{{ "Shortname"|trans({}, "entity_user") }}</th>
            <th>{{ "Is enabled"|trans({}, "entity_user") }}</th>
            <th>{{ "Medical validation"|trans({}, "entity_user") }}</th>
            <th class="w-minimal" data-orderable="false"></th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.name }} ({{ user.abbreviation }})</td>
                <td>{{ user.shortname }}</td>
                <td>{{ user.enabled|trans_boolean }}</td>
                <td>{{ user.medicalValidation|trans_boolean }}</td>
                <td class="w-minimal">
                    <a class="btn btn-outline-secondary"
                       href="{{ path("configuration_user_edit", {"user" : user.id}) }}">
                        <i class="fas fa-edit"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
