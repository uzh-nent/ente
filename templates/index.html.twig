{% extends 'base.html.twig' %}

{% block title %}{{ 'index.title'|trans }}{% endblock %}
{% block description %}{{ 'index.description'|trans }}{% endblock %}

{% trans_default_domain "index" %}

{% block body %}
    <section class="container container-text py-5">
        <h1>{{ 'index.title'|trans }}</h1>
        <p class="lead">
            {{ 'index.description'|trans }}
        </p>

        <p>
            {{ 'index.welcome'|trans }}
        </p>

        <p>
            {{ 'index.created_by'|trans }} <a href="https://famoser.ch" target="_blank">famoser.ch</a>.<br/>
            {{ 'index.open_source'|trans }} <a href="https://gitlab.uzh.ch/nent/ente" target="_blank">nent/ente</a>.
        </p>

        {% if is_granted('ROLE_ADMIN') %}
            <p>
                <a href="{{ path('admin_index') }}">
                    {{ "index.title"|trans({}, "admin") }}
                </a>
            </p>
        {% else %}
            <p>
                <a href="{{ path('login') }}">
                    {{ "login.title"|trans({}, "security") }}
                </a>
            </p>
        {% endif %}
    </section>
{% endblock %}
