{% extends '_content.html.twig' %}

{% block title %}{{ 'interpretations.title'|trans }}{% endblock %}
{% block description %}{{ 'interpretations.description'|trans }}{% endblock %}

{% trans_default_domain "reference_data" %}
{% import "macros/components.html.twig" as components %}

{% block inner_content %}
    <p>
        <a class="btn btn-outline-primary"
           href="{{ path("reference_data_interpretation_new") }}">
            <i class="fas fa-plus"></i>
            {{ "interpretation_new.title"|trans }}
        </a>
    </p>
    <table class="table table-striped table-hover datatable border">
        <thead>
        <tr>
            <th>{{ "Interpretation group"|trans({}, "entity_interpretation") }}</th>
            <th>{{ "entity.title"|trans({}, "entity_interpretation") }}</th>
            <th class="w-minimal" data-orderable="false"></th>
        </tr>
        </thead>
        <tbody>
        {% for interpretation in interpretations %}
            <tr>
                <td>{{ interpretation.interpretationGroup }}</td>
                <td>{{ components.render_code(interpretation) }}</td>
                <td class="w-minimal">
                    <a class="btn btn-secondary"
                       href="{{ path("reference_data_interpretation_edit", {"interpretation" : interpretation.id}) }}">
                        <i class="fas fa-edit"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
