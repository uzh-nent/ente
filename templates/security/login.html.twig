{% extends "security/_base.html.twig" %}

{% block title %}{{ "login.title"|trans }}{% endblock %}
{% block description %}{{ "login.description"|trans }}{% endblock %}

{% trans_default_domain "security" %}

{% block body_form %}
    <div class="form-wrapper">
        {{ form_start(form) }}
        <input type="hidden" name="_csrf_token" data-controller="csrf-protection"
               value="{{ csrf_token('authenticate') }}">
        {{ form_end(form) }}

        {% if lastError %}
            <a href="{{ path('login_end_session') }}" class="btn btn-outline-secondary">
                {{ "login.end_session"|trans }}
            </a>
        {% endif %}
    </div>
{% endblock %}
